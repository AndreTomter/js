<script>
function myFunction() {
let selectedFilters = [];
const images = [...document.querySelectorAll('.row')];
const filters = [...document.querySelectorAll('.filterEn select')];

for (const filter of filters) {
  filter.addEventListener('change', function(event) {
    selectedFilters = filters.map(filter => filter.value).filter(Boolean);
    console.log(selectedFilters);
    for (const image of images) {
      image.classList[selectedFilters.some(filter => image.classList.contains(filter)) 
        ? 'remove'
        : 'add']('visible');
    }
  })
}
}

function myFunctionTO() {
let selectedFilters = [];
const images = [...document.querySelectorAll('.row')];
const filters = [...document.querySelectorAll('.filterTo select')];

for (const filter of filters) {
  filter.addEventListener('change', function(event) {
    selectedFilters = filters.map(filter => filter.value).filter(Boolean);
    console.log(selectedFilters);
    for (const image of images) {
      image.classList[selectedFilters.some(filter => image.classList.contains(filter)) 
        ? 'remove'
        : 'add']('visibleTO');
    }
  })
}
}
</script>
</body>

